@model IEnumerable<Product.Models.tblitem>
@{
    ViewBag.Title = "Show";
}
<h2>Show</h2>
<table class="table table-bordered bg-primary">
    <tr>
        <th>Product Name</th>
        <th>Product Model</th>
        <th>Product Price</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var a in Model)
    {
        <tr class="bg-success">
            <td style="color:black">@a.product_name</td>
            <td style="color:black">@a.product_model</td>
            <td style="color:black">@a.product_price</td>
            <td>@Html.ActionLink("Edit", "Add", new { id = a.id }, new { @class = "btn btn-success" })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = a.id }, new { @class = "btn btn-danger" })</td>
        </tr>
    }
</table>

